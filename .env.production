# =============================================================================
# EIOS Production Environment Template
# Copy this to .env.production.local and fill in actual values
# =============================================================================

# =============================================================================
# Database (Railway Postgres)
# These are automatically injected by Railway when you provision Postgres
# =============================================================================
# DATABASE_URL=postgresql://postgres:password@host.railway.internal:5432/railway
# DATABASE_PUBLIC_URL=postgresql://postgres:password@host.railway.app:5432/railway
# PGHOST=host.railway.internal
# PGHOST_UNPOOLED=host.railway.internal
# PGPORT=5432
# PGPORT_UNPOOLED=5432
# PGUSER=postgres
# PGPASSWORD=password
# PGDATABASE=railway

# =============================================================================
# Redis (Railway Redis)
# These are automatically injected by Railway when you provision Redis
# =============================================================================
# REDIS_URL=redis://default:password@host.railway.internal:6379
# REDIS_PUBLIC_URL=redis://default:password@host.railway.app:6379
# REDISHOST=host.railway.internal
# REDISPORT=6379
# REDISUSER=default
# REDISPASSWORD=password

# =============================================================================
# API Service Configuration
# =============================================================================
PORT=4000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info
LOG_PRETTY=false

# Security
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Database Connection Pooling
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_SSL_REJECT_UNAUTHORIZED=true

# Redis Key Prefix
REDIS_KEY_PREFIX=eios:

# =============================================================================
# Realtime Service Configuration
# =============================================================================
REALTIME_PORT=4100

# =============================================================================
# Worker Service Configuration
# =============================================================================
WORKER_POLL_INTERVAL_MS=5000

# =============================================================================
# Web Service Configuration (Next.js)
# =============================================================================
WEB_PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Public URLs for client-side navigation
NEXT_PUBLIC_API_URL=https://api.eios.app
NEXT_PUBLIC_REALTIME_URL=wss://realtime.eios.app

# Internal URLs for server-side rendering
API_INTERNAL_URL=http://api.railway.internal:4000
REALTIME_INTERNAL_URL=http://realtime.railway.internal:4100

# =============================================================================
# Internal Service Communication
# Use these for service-to-service calls within Railway
# =============================================================================
API_INTERNAL_URL=http://api.railway.internal:4000
REALTIME_INTERNAL_URL=http://realtime.railway.internal:4100
WORKER_INTERNAL_URL=http://worker.railway.internal:4200
WEB_INTERNAL_URL=http://web.railway.internal:3000

# =============================================================================
# Authentication & Security
# Add your production secrets here (use Railway dashboard for actual values)
# =============================================================================
# JWT_SECRET=your-production-jwt-secret-min-32-chars
# JWT_ISSUER=eios.app
# JWT_AUDIENCE=api.eios.app
# JWT_ACCESS_TOKEN_EXPIRY=15m
# JWT_REFRESH_TOKEN_EXPIRY=7d

# API Keys for external services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# SES_FROM_EMAIL=noreply@eios.app

# Twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# =============================================================================
# Feature Flags
# =============================================================================
# ENABLE_ANALYTICS=true
# ENABLE_ERROR_REPORTING=true
# ENABLE_RATE_LIMITING=true
