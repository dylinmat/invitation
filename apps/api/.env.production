# EIOS API - Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0
TRUST_PROXY=true

# Database
DATABASE_URL=${DATABASE_URL}
DB_SSL_REJECT_UNAUTHORIZED=true

# Redis
REDIS_URL=${REDIS_URL}
REDIS_PUBLIC_URL=${REDIS_PUBLIC_URL}

# CORS Configuration - Allow requests from web service
CORS_ORIGIN=https://web-production-a5a7cc.up.railway.app

# Security
COOKIE_SECRET=${COOKIE_SECRET}

# Public URL for Swagger/docs
PUBLIC_URL=https://invitation-production-9f75.up.railway.app

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
